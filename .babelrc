    "es": {
      "plugins": [
        "transform-runtime"
      ],
      "presets": [
        "es2015-rollup",
        "@babel/react"
      ]
    },
    "production": {
      "comments": false,
      "plugins": [
        "transform-react-inline-elements",
        "transform-runtime"
      ],
      "presets": [
        "@babel/env",
        "@babel/react"
      ]
    },
    "test": {
      "comments": false,
      "plugins": [
        "__coverage__"
      ],
      "presets": [
        "@babel/env",
        "@babel/react"
      ]
    }
  },
  "plugins": [
    ["@babel/plugin-proposal-decorators", { "legacy": true }],
    ["@babel/plugin-proposal-class-properties", { "loose" : true }]
  ]
}
